@model CarModel

@using (Html.BeginForm("CarsSendSubmit", "Home", FormMethod.Post))
{
    <h3>Fix my car</h3>
    <div>
        @Html.LabelFor(a => a.Number)
        @Html.Raw(" ")
        @Html.TextBoxFor(a => a.Number)
    </div>
    <div>
        @Html.LabelFor(a => a.Manifacturer)
        @Html.Raw(" ")
        @Html.TextBoxFor(a => a.Manifacturer)
    </div>
    <div>
        @Html.LabelFor(a => a.Year)
        @Html.Raw(" ")
        @Html.TextBoxFor(a => a.Year)
    </div>
@*    <div>
        @Html.LabelFor(a => a.AssignedId)
        @Html.Raw(" ")
        @Html.TextBoxFor(a => a.AssignedId)
    </div>*@

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Choose your mechanic</label>
        </div>
        <select class="custom-select" id="@Html.TextBoxFor(a => a.AssignedId)">
            <option selected>Choose...</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>

    <input type="submit" value="Submit" />

}
