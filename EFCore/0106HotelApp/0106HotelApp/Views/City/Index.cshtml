@model List<City>
<div class="mb-2">
    @Html.ActionLink("Add new city","Add","City","", new { @class= "btn btn-primary" })
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Miestas</th>
            <th scope="col" style="width: 30%">Tasks</th>
            <th scope="col" style="width: 20%">Admin</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in @Model)
        {
            <tr>
                <th scope="row">@city.Id</th>
                <td>@city.Name</td>
                <td>
                    @Html.ActionLink("Hotels","SelectIndex", "Hotel", new {id = @city.Id } ,new { @class= "btn btn-success" })
                    @Html.ActionLink("Cleaners","SelectIndex", "Cleaner", new {id = @city.Id } ,new { @class= "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Update","Update", "City", new {id = @city.Id } ,new { @class= "btn btn-secondary" })
                    @Html.ActionLink("Delete","Delete", "City", new {id = @city.Id } ,new { @class= "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>